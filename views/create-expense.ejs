<form
  class="row g-3 needs-validation"
  action="/create-expense"
  method="POST"
  novalidate
  enctype="multipart/form-data"
>
  <!--  EXPENSE CATEGORY -->
  <div class="form-group">
    <label for="name" class="form-label">Expense Name</label>
    <input
      type="text"
      class="form-control w-75"
      id="name"
      name="name"
      required
    />
    <div class="invalid-feedback">Type something!</div>
    <div class="valid-feedback">Amazing!</div>
  </div>

  <!--  BUDGET -->
  <div class="form-group">
    <label for="budget_id" class="form-label">Budget</label>
    <select name="budget_id" class="form-control w-75">
      <option value="" selected disabled hidden>Select a budget</option>
      <% budgets.forEach((budget) => { %>
      <option value="<%= budget.id %>"><%= budget.name %></option>
      <% }); %>
    </select>
  </div>

  <!-- EXPENSE AMOUNT -->
  <div class="form-group">
    <label for="expense_amount" class="form-label">Expense Amount</label>
    <input
      type="number"
      class="form-control w-75"
      id="expense_amount"
      name="expense_amount"
      required
    />
    <div class="invalid-feedback">Type something!</div>
    <div class="valid-feedback">Amazing!</div>
  </div>

  <!-- NOTE TEXT AREA -->
  <div class="form-group">
    <label for="note">Text:</label><br />
    <textarea
      name="note"
      id="note"
      cols="30"
      rows="10"
      class="form-control w-75"
      placeholder="Write something here"
    ></textarea
    ><br />
  </div>

  <!-- TAGS -->

  <div class="form-check form-check-inline">
    <% tags.forEach((tag) => { %>

    <input
      class="form-check-input"
      type="checkbox"
      id="tag_ids"
      value="<%= tag.tag_id %>"
      name="tag_ids"
    />
    <label class="form-check-label" for="tag_ids"><%= tag.tag_name %></label>
    <br />

    <% }); %>
  </div>
  <a href="/create-tag"><small>Add more tags?</small></a>

  <!-- SPEND DATE -->
  <div class="col-md-4">
    <label for="date" class="form-label">Date</label>
    <input
      class="form-control"
      type="date"
      name="spend_date"
      id="date"
      min="2015/01/01"
      placeholder="mm/dd/yyyy"
      required
    />
    <div class="invalid-feedback">Please enter a date</div>
    <div class="valid-feedback">Remarkable!</div>
  </div>

  <label for="photo" class="form-label">upload photo:</label><br />
  <input type="file" name="photo" />

  <!-- submit button  -->
  <div class="col-12">
    <button class="btn btn-primary" type="submit">Submit form</button>
  </div>
</form>
