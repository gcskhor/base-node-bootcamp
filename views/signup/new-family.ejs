<h2><b>SIGN UP</b></h2>

<form
  action="/signup/new-family"
  method="POST"
  class="row g-3 needs-validation"
  novalidate
>
  <div class="form-group">
    <label for="email" class="form-label">Email Address</label>
    <input
      type="text"
      name="email"
      class="form-control w-75"
      id="email"
      placeholder="big_daddy@gmail.com"
      required
    />
    <div class="invalid-feedback">Type something!</div>
    <div class="valid-feedback">Amazing!</div>
  </div>

  <div class="form-group">
    <label for="username" class="form-label">Username</label>
    <input
      type="text"
      name="username"
      class="form-control w-75"
      id="username"
      placeholder="big_daddy"
      required
    />
    <div class="invalid-feedback">Type something!</div>
    <div class="valid-feedback">Amazing!</div>
  </div>

  <div class="form-group">
    <label for="family_name" class="form-label">Give your family a name</label>
    <input
      type="text"
      name="family_name"
      class="form-control w-75"
      id="family_name"
      placeholder="big daddy's house"
      required
    />
    <div class="invalid-feedback">Type something!</div>
    <div class="valid-feedback">Amazing!</div>
  </div>

  <div class="form-group">
    <label for="password" class="form-label">Password</label>
    <input
      type="password"
      name="password"
      class="form-control w-75"
      id="password"
      required
    />
  </div>

  <div class="">
    <button class="btn btn-primary" type="submit">Log In</button>
  </div>
</form>
