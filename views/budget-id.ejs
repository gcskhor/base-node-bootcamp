<div class="row">
  <% expenses.forEach(expense => { %>
    <div>
      <%= expense.name %></br>
      $<%= expense.expense_amount %></br>
      By User: <%= expense.username %></br>
      Spend Date: <%= expense.spend_date %></br>

      </br>
    <div>
  <% }) %> 
</div>

<% expenses.forEach(expense => { %>
  <div class="card expense-card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= expense.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">$<%= expense.expense_amount %></h6>
      <p class="card-text"><%= expense.note %></p>
      
      <div class="d-flex">
        <p class="card-text ml-auto text-muted">By <%= expense.username %> on <%= expense.spend_date %></p>
      </div>
    </div>
  </div>
<% }) %> 